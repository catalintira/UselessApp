<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_stat_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_item_text"
        android:layout_marginStart="@dimen/margin_horizontal_item_text"
        android:layout_marginEnd="@dimen/margin_horizontal_item_text"/>

    <TextView
        android:id="@+id/tv_item_stat_average"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_item_text"
        android:layout_marginStart="@dimen/margin_horizontal_item_text"
        android:layout_marginEnd="@dimen/margin_horizontal_item_text"/>

    <TextView
        android:id="@+id/tv_item_stat_sum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_item_text"
        android:layout_marginStart="@dimen/margin_horizontal_item_text"
        android:layout_marginEnd="@dimen/margin_horizontal_item_text"/>

</LinearLayout>