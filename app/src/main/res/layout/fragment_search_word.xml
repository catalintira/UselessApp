<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.SearchWordFragment">

    <EditText
        android:id="@+id/edit_text_search_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_edit_text"
        android:layout_marginStart="@dimen/margin_horizontal_edit_text"
        android:layout_marginEnd="@dimen/margin_horizontal_edit_text"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_search_word"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_top_rec_view"
        android:layout_marginStart="@dimen/margin_horizontal_rec_view"
        android:layout_marginEnd="@dimen/margin_horizontal_rec_view"/>


</LinearLayout>